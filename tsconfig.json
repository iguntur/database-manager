{
	"compilerOptions": {
		"pretty": true,
		"sourceMap": false,
		"noImplicitAny": false,
		"removeComments": false,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"target": "es2015",
		"outDir": "./dist",
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*.ts",
		"types/index.d.ts"
	]
}
